app-card
 .title
  a(routerLink="../{{workshop.id}}" )
   h3 {{workshop.title}}
 .content
  img(src='{{workshop.img}}')
  p {{workshop.shortDesc}}
   a(routerLink="../{{workshop.id}}" ) Read more
 .footer
  .article-footer
   .tags-list
    span('*ngFor'="let tag of tagsList" '[class.active]'="tag.isActive") {{tag.tagTitle}}
   .likes
    span {{workshop.likes}} 
    app-like([likeActive]="likeactive",(likeClicked)="likec()")  
  app-timestamp([date]="workshop.creationDate",[format]="'fullDate'") 
     

