app-card
 .title
  a(routerLink="../{{workshop.id}}" )
   h3 {{workshop.title}}
 .content
  a(routerLink="../{{workshop.id}}" )
   img(src='{{workshop.image}}')
  p {{workshop.description}}
   a(routerLink="../{{workshop.id}}" ) Read more
 .footer
  .article-footer
   .tags-list('*ngIf'='allTags')
    span('*ngFor'="let tag of tagsList"  appQueryParamsActive [tag]="tag") {{tag.tagTitle}}
   .likes
    span {{workshop.likes}} 
    app-like([likeActive]="likeactive",(likeClicked)="likec()")
  .date_delete    
   app-timestamp([date]="workshop.createdAt",[format]="'fullDate'")
   i('*ngIf'='isEditable' '(click)'='deletePost()').icon-bin 
     

