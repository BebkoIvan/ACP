app-viewport
 .workshop
  .title
   h3 {{workshop.title}}
  .content-area
   img(src='{{workshop.img}}')
   .fulltext('*appCollapsable'='100 button button1 turnedOn true animationOn true defState "expanded"') {{workshop.fulltext}}
   ng-template('#button1'='' let-control='control' let-title='title')
    button.btnCollapse('(click)'='control()') {{title}}
  .workshop-footer
   .tags-likes
    .tags-list
     span('*ngFor'="let tag of workshop.tagsList") {{tag}} 
    .likes
     span {{workshop.likes}} 
     app-like('[likeActive]'="likeActive" '(likeClicked)'="likec()")  
   .date published at
    app-timestamp([date]="workshop.creationDate",[format]="'short'") 
 app-auxiliary-content([auxContActive]="acaActive",(acaClick)="acaHandler()") 

