.commentCard
 .header
  button.user
   app-user-pic([name]="comment.authorName",[lastname]="comment.authorLastname",[imgSrc]="comment.authorImg")
   span {{comment.authorName}} {{comment.authorLastname}}
  .time 
   span at
   app-timestamp([date]="comment.date",[format]="'short'") 
 .main-content
  p {{comment.commentText}}  
 .commentFooter
  span Likes: {{comment.likes}}
  app-like([likeActive]="likeActive",(likeClicked)="likeClick()") 

