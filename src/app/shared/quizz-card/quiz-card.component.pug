.quizCard('*ngIf'='quiz')
 .quizCard__header
  .quizName
   a(routerLink="../{{quiz.id}}" )
    span {{quiz.name}}
  button.deleteQuiz('*ngIf'='isEditable' '(click)'='deleteQuiz($event)')
   i.icon-bin  
 .card-footer
  app-timestamp([date]="quiz.createdAt", [format]="'fullDate'") 
  span {{author$ | async}}
