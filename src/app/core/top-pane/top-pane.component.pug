header
  div(id="logo",*ngIf="!search_active")
    a(href="#")
     img(src="/assets/images/logo.png")
  div(class="menu-label",*ngIf="!search_active",(click)="menu_handler($event)")
    i(class="icon-menu",*ngIf="!menu_active")
    i(class="icon-cross",*ngIf="menu_active")  
  .search-box
    div(id="search_btn",(click)="handleSearchClick($event)")
     i(class="icon-search",*ngIf="!search_active")
     i(class="icon-cross",*ngIf="search_active")
    input(type="text", id="search-bar", *ngIf="search_active", placeholder="Search..") 
  a(class="profile",*ngIf="!search_active")
    span {{ profile.user_name }}
    img(src= '{{profile.get_img()}}', alt='{{ profile.user_name }}')
